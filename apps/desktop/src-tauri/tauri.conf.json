{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Geologic Wizard",
  "version": "0.1.0",
  "identifier": "com.geologicwizard.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://127.0.0.1:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Geologic Wizard",
        "width": 1550,
        "height": 980,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.icns"
    ]
  }
}
